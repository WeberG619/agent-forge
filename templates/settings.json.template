{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "mcp__claude-memory__*"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 {{INSTALL_DIR}}/hooks/pre-tool-use/pre_commit_guard.py",
            "timeout": 10,
            "statusMessage": "Pre-commit guard: checking staged files..."
          }
        ]
      }
    ]
  },
  "mcpServers": {}
}
