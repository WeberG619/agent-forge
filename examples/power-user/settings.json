{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(powershell.exe:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(dotnet:*)",
      "mcp__claude-memory__*",
      "mcp__voice__*"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.cadre-ai/hooks/session-start/start_services.sh",
            "timeout": 30,
            "statusMessage": "Starting background services..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.cadre-ai/hooks/pre-tool-use/pre_commit_guard.py",
            "timeout": 10,
            "statusMessage": "Pre-commit guard..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.cadre-ai/hooks/user-prompt/detect_correction.py",
            "timeout": 5,
            "statusMessage": "Checking for correction intent..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.cadre-ai/hooks/stop/session_save.py",
            "timeout": 10,
            "statusMessage": "Saving session state..."
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "claude-memory": {
      "command": "python3",
      "args": ["~/.cadre-ai/mcp-servers/claude-memory/src/server.py"],
      "disabled": false
    },
    "voice": {
      "command": "python3",
      "args": ["~/.cadre-ai/mcp-servers/voice-mcp/server.py"],
      "disabled": false
    },
    "windows-browser": {
      "command": "python3",
      "args": ["~/.cadre-ai/mcp-servers/windows-browser/src/server.py"],
      "disabled": false,
      "_comment": "Windows/WSL only - browser automation via CDP"
    },
    "telegram-mcp": {
      "command": "python3",
      "args": ["~/.cadre-ai/mcp-servers/telegram-mcp/server.py"],
      "env": {
        "TELEGRAM_BOT_TOKEN": "YOUR_BOT_TOKEN_HERE"
      },
      "disabled": true,
      "_comment": "Enable and set bot token for Telegram integration"
    }
  }
}
