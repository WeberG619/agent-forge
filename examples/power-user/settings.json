{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(powershell.exe:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(dotnet:*)",
      "mcp__claude-memory__*",
      "mcp__voice__*",
      "mcp__excel-mcp__*",
      "mcp__word-mcp__*",
      "mcp__powerpoint-mcp__*",
      "mcp__visual-memory__*",
      "mcp__financial-mcp__*"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-power-kit/hooks/session-start/start_services.sh",
            "timeout": 30,
            "statusMessage": "Starting background services..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-power-kit/hooks/pre-tool-use/pre_commit_guard.py",
            "timeout": 10,
            "statusMessage": "Pre-commit guard..."
          }
        ]
      },
      {
        "matcher": "mcp__*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-power-kit/hooks/pre-tool-use/mcp_seatbelt.py",
            "timeout": 5,
            "statusMessage": "MCP seatbelt check..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-power-kit/hooks/user-prompt/detect_correction.py",
            "timeout": 5,
            "statusMessage": "Checking for correction intent..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-power-kit/hooks/stop/session_save.py",
            "timeout": 10,
            "statusMessage": "Saving session state..."
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "claude-memory": {
      "command": "python3",
      "args": ["~/.claude-power-kit/mcp-servers/claude-memory/src/server.py"],
      "disabled": false
    },
    "voice": {
      "command": "python3",
      "args": ["~/.claude-power-kit/mcp-servers/voice-mcp/server.py"],
      "disabled": false
    },
    "excel-mcp": {
      "command": "powershell.exe",
      "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-Command", "cd '~/.claude-power-kit/mcp-servers/excel-mcp'; python server.py"],
      "disabled": false,
      "_comment": "Windows only"
    },
    "word-mcp": {
      "command": "powershell.exe",
      "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-Command", "cd '~/.claude-power-kit/mcp-servers/word-mcp'; python server.py"],
      "disabled": false,
      "_comment": "Windows only"
    },
    "powerpoint-mcp": {
      "command": "powershell.exe",
      "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-Command", "cd '~/.claude-power-kit/mcp-servers/powerpoint-mcp'; python server.py"],
      "disabled": false,
      "_comment": "Windows only"
    }
  }
}
